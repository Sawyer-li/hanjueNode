block privateScripts
  script(src="/js/topic.js")
block content
  script.
    var a =  !{JSON.stringify(initData)};
    console.log(a);
  .topic_body.clear
    .retTop
      span.retTop_word 返回顶部
      .triangle-top-arrow.active
        .son
    .header.clear
      .mid_head.fl
        button.heart #{initData.likecount}
        button.eye #{initData.click}
        .top
          h2 #{initData.subject}
        .middle.clear
          .fl.olabel
            em 标签：
            span #{initData.labelname}
          .fr.updateTime #{initData.dateline}
        .bottom.clear
          .fl.clear
            button.content.fl +关注内容
            a.funbtn.comment(href="/") 评论
            button.funbtn.agree 赞成
            a.funbtn.disage(href="") 反对
            button.funbtn.proPush 宝推
          ul.fr.clear
            each item in accessory
              a(href="/" download)
                li #{item.typename}
      .personage_mess.clear.fl
        p.per_name 作者：
          span #{initData.author}
        .getAgree 收到的赞： 
          span #{initData.memberlikecount}
        .follow
          span #{initData.befocused}
        button 点击关注
        .headPort 
          a(href="/"): img(src=initData.image, alt="")
    section.topic_mid.fl        
      .mid_doc
        .main.wangEditor-container
          .wangEditor-txt.wangDisplay#contenthtml
            #{initData.content}
        .displayAll 显示全部
        .pushPer 
          h3 宝推人
          p
            span 张三
            span 李四
            span 王二麻子
      .mid_edit
        a.editComBtn(href="/",target= _blank) 写评论
        .editComBtn 已禁言
      .mid_comment
        .comment_head.comment_headHasComment
          h3.fl 评论区
          a.fr 全部
        ul#treeDemo.ztree
        .more 查看更多
      .mid_footer.clear
        .fl.rankL
          h3 点赞榜单
          ul
            a(href="/"): li 这是一个帖子
              .diamonds
        .fr.rankL.newReply
          h3 最新回复
            ul
              a(href="/") li 这是一个帖子
                span.replyAuthor 作者
                span.replyCount
                .diamonds
    aside.fl
      .reolyLink
        a.replyedPeople.fl(href="/") 回复说
        em.replyPeople.fl sawyer
      .reolyLink
        h4 楼主建楼
      .hot_news.clear
        .hot_title.clear
          h3.fl 历史贴目：
          a.fr(href="#") 更多+
        ul.hot_body
          a(href="/") 
            li 又是帖子么
              .diamonds.hot_diamonds
      .banner_box          
        .banner.fl
          img(src="/news/sBanner1.png", alt="")
        .banner.fr
